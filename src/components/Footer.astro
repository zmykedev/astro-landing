<style>
  footer {
    padding: 4rem 0 2rem;
    background-color: #000;
    text-align: center;
    color: var(--color-secondary);
    border-top: 1px solid rgba(247, 147, 30, 0.2);
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .brand {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .logo {
    font-size: 2.5rem;
    font-weight: 700;
    color: #f7931e;
  }

  .logo-text {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--color-primary);
    letter-spacing: 1px;
  }

  .footer-links {
    display: flex;
    gap: 2rem;
  }

  .footer-links a {
    color: var(--color-secondary);
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .footer-links a:hover {
    color: #f7931e;
  }

  .copyright {
    font-size: 0.9rem;
    margin-top: 1rem;
  }

  .disclaimer {
    font-size: 0.75rem;
    color: #555;
    margin-top: 0.5rem;
  }
</style>
